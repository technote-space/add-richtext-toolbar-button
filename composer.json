{
  "name": "technote-space/add-richtext-toolbar-button",
  "description": "This plugin makes it easy to add RichText toolbar button.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0+",
  "authors": [
    {
      "name": "Technote",
      "email": "technote.space@gmail.com",
      "homepage": "https://technote.space"
    }
  ],
  "require": {
    "wp-content-framework/core": "~0.0",
    "wp-content-framework/custom_post": "~0.0",
    "wp-content-framework/update": "~0.0",
    "wp-content-framework/editor": "^0.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "*",
    "phpmd/phpmd": "^2.6",
    "phpcompatibility/phpcompatibility-wp": "*",
    "php-coveralls/php-coveralls": "^2.1",
    "phpunit/phpunit": "^4.8 || ^5.7 || ^7.5",
    "phake/phake": "^2.3 || ^3.1"
  },
  "scripts": {
    "test": [
      "@phpcs",
      "@phpmd",
      "@phpunit"
    ],
    "phpunit": [
      "phpunit"
    ],
    "phpcs": [
      "phpcs --standard=./phpcs.xml"
    ],
    "fix": [
      "phpcbf --standard=./phpcs.xml"
    ],
    "phpmd": [
      "phpmd ./src/,./configs/,./tests/ text phpmd.xml"
    ],
    "coveralls": [
      "php-coveralls -v"
    ],
    "codecept": [
      "codecept"
    ],
    "bin:wp-test": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./travis-ci/bin/php/wp-test.sh",
    "bin:phpcs": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./travis-ci/bin/php/phpcs.sh",
    "bin:phpmd": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./travis-ci/bin/php/phpmd.sh",
    "bin:js-lint": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./travis-ci/bin/js/js-lint.sh",
    "bin:js-test": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) ./travis-ci/bin/js/js-test.sh",
    "bin:build": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) TRAVIS_REPO_SLUG=technote-space/add-richtext-toolbar-button TRAVIS_TAG=v1.2.3 source ./travis-ci/bin/deploy/env.sh && bash ./travis-ci/bin/deploy/create.sh",
    "bin:test": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) TRAVIS_REPO_SLUG=technote-space/add-richtext-toolbar-button TRAVIS_TAG=v1.2.3 bash ./travis-ci/bin/test.sh",
    "bin:diff": "TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) TRAVIS_REPO_SLUG=technote-space/add-richtext-toolbar-button TRAVIS_TAG=v1.2.3 source ./travis-ci/bin/deploy/env.sh && bash ./travis-ci/bin/deploy/wp-check-diff.sh",
    "bin:prepare": "rm -rdf travis-ci && git clone --depth=1 https://github.com/wp-content-framework/travis-ci.git travis-ci && TRAVIS_BUILD_DIR=$(cd $(dirname $0); pwd) bash ./travis-ci/bin/prepare.sh"
  },
  "config": {
    "process-timeout": 1200
  }
}
